{
  "compilerOptions": {
    "allowJs": true,
    "importHelpers": true,
    "lib": [
      "ESNext"
    ],
    "module": "CommonJS",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib/",
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es5"
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
